  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'beggle'",
      "cargo": {
        "args": [
          "build",
          "--bin=beggle",
          "--package=beggle"
        ],
        "filter": {
          "name": "beggle",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'beggle'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=beggle",
          "--package=beggle"
        ],
        "filter": {
          "name": "beggle",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}"
      }
    }
  ]
}